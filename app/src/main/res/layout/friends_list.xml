<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/name"
        android:layout_width="0sp"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:paddingStart="10dp"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:focusable="false"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:src="@drawable/baseline_done_black_18dp"
        android:scaleType="centerInside"
        android:id="@+id/accept"
        android:background="#00000000"
        />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:src="@drawable/outline_cancel_black_18dp"
        android:scaleType="centerInside"
        android:id="@+id/cancel"
        android:background="#00000000"
        android:paddingEnd="10dp"
        />


    <ImageButton
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:src="@drawable/baseline_email_black_18dp"
        android:scaleType="centerInside"
        android:id="@+id/message"
        android:background="#00000000"
        />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:src="@drawable/calendar_clock"
        android:scaleType="centerInside"
        android:id="@+id/upcoming"
        android:background="#00000000"
        />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:src="@drawable/account_multiple_minus"
        android:scaleType="centerInside"
        android:id="@+id/unfriend"
        android:background="#00000000"
        android:paddingEnd="10dp"
        />


</LinearLayout>