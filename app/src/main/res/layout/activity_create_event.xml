<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:id="@+id/edtNameT"
                />

            <EditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below = "@+id/edtNameT"
                android:hint="Name example"
                android:inputType="text"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description: "
                android:layout_below = "@+id/edtName"
                android:id="@+id/edtRequirementsT"
                />

            <EditText
                android:id="@+id/edtRequirements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below = "@+id/edtRequirementsT"
                android:hint="Short talk about animals"
                android:inputType="text"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start date: "
                android:layout_below = "@+id/edtRequirements"
                android:id="@+id/edtStartT"
                />

            <EditText
                android:id="@+id/edtStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below = "@+id/edtStartT"
                android:hint="10/10/2019"
                android:inputType="datetime"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start time: "
                android:layout_below = "@+id/edtStart"
                android:id="@+id/edtStartTimeT"
                />

            <EditText
                android:id="@+id/edtStartTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below = "@+id/edtStartTimeT"
                android:hint="12:00"
                android:inputType="datetime"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End date: "
                android:layout_below = "@+id/edtStartTime"
                android:id="@+id/edtEndT"
                />

            <EditText
                android:id="@+id/edtEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below = "@+id/edtEndT"
                android:hint="10/10/2019"
                android:inputType="datetime"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End time: "
                android:layout_below = "@+id/edtEnd"
                android:id="@+id/edtEndTimeT"
                />

            <EditText
                android:id="@+id/edtEndTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below = "@+id/edtEndTimeT"
                android:hint="13:00"
                android:inputType="datetime"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Allowed participants: "
                android:layout_below = "@+id/edtEndTime"
                android:id="@+id/edtAllwT"
                />

            <EditText
                android:id="@+id/edtAllw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below = "@+id/edtAllwT"
                android:hint="20"
                android:inputType="number"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Role: "
                android:layout_below = "@+id/edtAllw"
                android:id="@+id/edtRoleT"
                />

            <Spinner xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/spinner"
                android:layout_below = "@+id/edtRoleT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/spinner"
                android:text="-- Place --"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Town: "
                android:layout_below = "@+id/text1"
                android:id="@+id/edtTownT"
                />

            <EditText
                android:id="@+id/edtTown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below = "@+id/edtTownT"
                android:hint="Madrid"
                android:inputType="text"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country: "
                android:layout_below = "@+id/edtTown"
                android:id="@+id/edtCountryT"
                />

            <EditText
                android:id="@+id/edtCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below = "@+id/edtCountryT"
                android:hint="Spain"
                android:inputType="text"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address: "
                android:layout_below = "@+id/edtCountry"
                android:id="@+id/edtAddressT"
                />

            <EditText
                android:id="@+id/edtAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below = "@+id/edtAddressT"
                android:hint="Avda. Cruz del Campo, 45B, 3A"
                android:inputType="text"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Postal code: "
                android:layout_below = "@+id/edtAddress"
                android:id="@+id/edtPostalCodeT"
                />

            <EditText
                android:id="@+id/edtPostalCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below = "@+id/edtPostalCodeT"
                android:hint="41590"
                android:inputType="text"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details: "
                android:layout_below = "@+id/edtPostalCode"
                android:id="@+id/edtDetailsT"
                />

            <EditText
                android:id="@+id/edtDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below = "@+id/edtDetailsT"
                android:hint="Near the center"
                android:inputType="text"
                />

            <Button
                android:layout_below = "@+id/edtDetails"
                android:id="@+id/btnCreate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Create"
                />

        </RelativeLayout>
    </ScrollView>

</android.support.v4.widget.DrawerLayout>